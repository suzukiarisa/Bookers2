

<div class="container">
      <div class="row">
      	<%= render 'books/sidemenu',book: @book, user: current_user %>

<div class="col-xs-4">
		<h1>Users</h1>
<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
	<tr>
				<th>
		<%= attachment_image_tag @user, :profile_image, size:'40x40', format: 'jpeg', fallback: "no_image.jpg" %>
				</th>
				<th>
					<%= user.name %>
				</th>
			<th>
	  <%= link_to "show", user_path(user) %>
	        </th>
	</tr>
		<% end %>

	</tbody>
</table>
</div>
</div>
</div>
</div>


