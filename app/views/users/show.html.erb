
<div class="row">
<%= render 'books/sidemenu',book: @book, user: @user %>

<div class="col-xs-4">

		<h1>Books</h1>

<table class="table">
	<thead>
	</thead>

	<tbody>
		<% @books.each do |book| %>
			<tr>
				<th>
		<%= attachment_image_tag @user, :profile_image, format:'jpeg',  class: "profile-image", size:'40x40', fallback: "no_image.jpg"%>
				</th>
				<th>
					<%= link_to book.title, book_path(book.id), class: '' %>
				</th>
				<th>
					<%= book.body %>
				</th>
			</tr>
		</tbody>
		<% end %>
</table>

</div>
</div>
<div class="footer"></div>

