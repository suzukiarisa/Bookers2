

<div class="row">
<%= render 'books/sidemenu', user: @user, book: @book_new %>

<div class="col-xs-4">
<h2>Book detail</h2>
<table class="table">

	<tbody>
		<tr>
			<th>
			<%= link_to(user_path(@user), class: '') do %>
					<%= attachment_image_tag @user, :profile_image, format:'jpeg',  class: "profile-image", size:'40x40', fallback: "no_image.jpg"%>
					<br>
					 <%= @user.name %>
					<% end %>
			</div>
				</th>
			<th>
				<%= link_to @book.title, book_path(@book) %>
			</th>
			<th>
				<%= @book.body %>
			</th>
			<th>
				<% if current_user == @user %>
			<%= link_to 'Edit', edit_book_path(@book) %>
			</th>
			<th>
			<%= link_to 'Destroy', book_path, method: :delete, data: { confirm: '本当に消しますか?' } %>
			</th>
        </tr>
        <% end %>
	</tbody>
</table>

</div>
</div>
</div>
