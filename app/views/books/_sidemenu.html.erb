
   <div class="col-xs-3">
    <h2>User info</h2>
        <div class="profile-container">
<%= attachment_image_tag user, :profile_image, format:'jpeg',   size:'100x100', fallback: "no_image.jpg"%>
</div>

<table class="table">

  <tbody>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>

<div class="clearfix">
  <% if user.id == current_user.id %>
  <%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
  <% else %>
  <%= link_to "", user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
  <% end %>
<br><br><br>

<div class="new-book">
<%= form_for (book) do |f| %>
<h2>New book</h2>

  <h4>Title</h4>
  <%= f.text_field :title, class: "col-xs-12" %>

  <h4>Opinion</h4>
  <%= f.text_area :body, class: "col-xs-12" %><br><br><br>
<div>
  <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12 class submit-botton" %>
</div>
<% end %>
</div>
</div>
</div>